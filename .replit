modules = ["python-3.11", "postgresql-16", "python3"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "imagemagickBig", "lcms2", "libGL", "libGLU", "libaom", "libde265", "libheif", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "nasm", "openjpeg", "pkg-config", "qhull", "tcl", "tesseract", "tk", "x265", "xsimd", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "streamlit run main.py --server.address=0.0.0.0 --server.port=5001"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Debug Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Message Extractor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Image Creator"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Server"

[[workflows.workflow]]
name = "Streamlit App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run main.py --server.address=0.0.0.0 --server.port=5001"
waitForPort = 5001

[[workflows.workflow]]
name = "Debug Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run debug_analysis.py --server.address=0.0.0.0 --server.port=5002"
waitForPort = 5002

[[workflows.workflow]]
name = "Message Extractor"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run extract_hidden.py --server.address=0.0.0.0 --server.port=5003"
waitForPort = 5003

[[workflows.workflow]]
name = "Test Image Creator"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run create_test_images.py --server.address=0.0.0.0 --server.port=5004"
waitForPort = 5004

[[workflows.workflow]]
name = "API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api_server.py"
waitForPort = 5005

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000

[[ports]]
localPort = 5001
externalPort = 80

[[ports]]
localPort = 5002
externalPort = 3000

